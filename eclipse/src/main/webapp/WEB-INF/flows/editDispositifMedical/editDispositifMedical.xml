<!--		<input name="idEssai" required="true" value="essaiManager.bean.id" />-->
<!--		<input name="idOnglet" required="true" value="'ONG_PRODUITS'" />-->
<!--	</subflow-state>-->

<end-state id="comeback"/>


</flow>